<h1>All Articles</h1>

<ul id="articles">
  <%@articles.each do |article| %> <!-- Ruby Code or ERB Tags -->
    <li>
      <%= link_to article.title, article_path(article),
          class: 'article_title' %> <!-- Equals sign indicates result of code will be output -->
    </li>
  <% end %>
</ul>

<%= link_to "Create a New Article", new_article_path,
    class: "new_article"%>
